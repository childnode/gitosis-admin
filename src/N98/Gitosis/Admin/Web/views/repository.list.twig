{% extends "layout_page.twig" %}
{% import "_filter_macros.twig" as filter %}

{% block content %}
    <h2>{{ 'Repositories'|trans }}</h2>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn btn-toolbar" href="{{ url('repository_create') }}">
                <i class="icon-plus-sign"></i>
                {{ 'Create Repository'|trans }}
            </a>
        </div>
    </div>

    {% include "_filter_form.twig" %}
    {{ filter.render_filters(filters) }}

    <ul id="repo_list" class="nav nav-tabs nav-stacked filter-list">
        {% for repo in repositories %}
            <li>
                <a href="{{ url('repository_view', { repo: repo.name }) }}" title="{{ repo.description }}"><i class="icon-black icon-book"></i>
                    <span>{{ repo.name }}</span>
                </a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}

{% block before_body %}
    {% include "_filter_form_js.twig" %}
{% endblock %}