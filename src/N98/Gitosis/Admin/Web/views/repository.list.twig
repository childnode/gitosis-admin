{% extends "layout_page.twig" %}

{% block content %}
    <h2>Repositories</h2>

    <div class="btn-toolbar">
        <div class="btn-group">
            <a class="btn btn-toolbar" href="{{ url('repository_edit', { repo: '' }) }}">
                <i class="icon-plus-sign"></i>
                Create Repository
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tbody>
            {% for repo in repositories %}
            <tr>
                <td>
                    <a href="{{ url('repository_view', { repo: repo.name }) }}"><i class="icon-black icon-book"></i> {{ repo.name }}</a>
                </td>
                <td>
                    <a href="{{ url('repository_view', { repo: repo.name }) }}"><i class="icon-black icon-info-sign"></i> Info</a>
                </td>
                <td>
                    <a href="#"><i class="icon-black icon-trash"></i> Delete</a>
                </td>
                <td>
                    <a href="{{ url('repository_edit', { repo: repo.name }) }}"><i class="icon-black icon-edit"></i> Edit</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}