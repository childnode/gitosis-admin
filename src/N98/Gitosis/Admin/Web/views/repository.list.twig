{% extends "layout_page.twig" %}

{% block content %}
    <h2>Repositories</h2>

    <a href="{{ url('repository_edit', { repo: '' }) }}">Create Repository</a>

    <ul class="nav nav-tabs nav-stacked">
    {% for repo in repositories %}
        <li>
            <a href="{{ url('repository_edit', { repo: repo.name }) }}"><i class="icon-black icon-book"></i> {{ repo.name }}</a>
        </li>
    {% endfor %}
    </ul>

{% endblock %}